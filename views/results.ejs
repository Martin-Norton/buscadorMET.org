<body>
    <h1>Resultados de la Búsqueda</h1>
    <div class="grid">
        <% objects.forEach(object => { %>
            <div class="card">
                <% if (object.imageUrl === null || object.imageUrl === "") { %>
                    <div class="no-image">Imagen no disponible para este artículo</div>
                <% } else { %>
                    <img src="<%= object.imageUrl %>" alt="<%= object.title %>" title="<%= object.date %>">
                <% } %>
                <div class="card-content">
                    <div>
                        <h3><%= object.title %></h3>
                        <p><%= object.culture %></p>
                        <p><%= object.dynasty %></p>
                    </div>
                    <% if (object.additionalImages.length > 0) { %>
                        <a href="/object/<%= object.id %>" class="button-link">Ver imágenes adicionales</a>
                    <% } else { %>
                        <a href="/object/<%= object.id %>?single=true" class="button-link">Ver imagen completa</a>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="pagination">
        <% if (page > 1) { %>
            <a href="/search?page=<%= page-1 %>&keyword=<%= keyword %>&department=<%= department %>&location=<%= location %>">Anterior</a>
        <% } %>
        <% if (page < totalPages) { %>
            <a href="/search?page=<%= ++page %>&keyword=<%= keyword %>&department=<%= department %>&location=<%= location %>">Siguiente</a>
        <% } %>
        <a href="/" class="button-link">Volver a la página principal</a>
    </div>
</body>
